<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5_coba.JenisMotorPage">
 <StackLayout>
    <ListView x:Name="listJenis" ItemsSource="{Binding ListJenis}" RowHeight="100">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Orientation="Vertical" HorizontalOptions="StartAndExpand">
              <Label Text="{Binding IdJenisMotor}" HorizontalOptions="Start"/>
              <Label Text="{Binding NamaJenisMotor}" HorizontalOptions="Start"/>
              <Label Text="{Binding NamaMerk}" HorizontalOptions="Start"/>
            </StackLayout> 
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
   <Button Text="Tambah Jenis Motor" x:Name="btnTambah"/>
  </StackLayout>
</ContentPage>